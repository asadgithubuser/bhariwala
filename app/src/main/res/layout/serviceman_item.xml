<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="13dp"
        android:backgroundTint="#EFF1F1"
        tools:context=".ServiceManActivity">

        <LinearLayout
            android:id="@+id/property_area_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="#B616AE"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/profile_placeholder"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/servc_type_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:elevation="1dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="3dp"
                                android:layout_centerVertical="true"
                                android:textColor="@color/white"/>

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="50dp"
                                android:textSize="14dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ribbon2"
                                android:textColor="@color/teal_700"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/servc_name_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAllCaps="false"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone : "
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#040404"/>
                            <TextView
                                android:id="@+id/servc_phone_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#292424"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Joined : "
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#040404"/>
                            <TextView
                                android:id="@+id/servc_joindate_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#292424"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Duty : "
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#040404"/>
                            <TextView
                                android:id="@+id/servc_duty_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#685959"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/servicman_setails_btn"
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:text="Details"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:textColor="@color/teal_700"
                    android:background="@drawable/button_outlinebox_style"
                    android:paddingHorizontal="7dp" />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>