<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicemanDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/property_area_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/profile_placeholder"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/servicman_details_tipe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="fds"
                                android:elevation="1dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="3dp"
                                android:layout_centerVertical="true"
                                android:textColor="@color/white"/>

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="50dp"
                                android:textSize="14dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ribbon2"
                                android:textColor="@color/teal_700"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/servicman_details_sName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAllCaps="false"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone : "
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#040404"/>
                            <TextView
                                android:id="@+id/servicman_details_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#292424"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Joined : "
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#040404"/>
                            <TextView
                                android:id="@+id/servicman_details_joindate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#292424"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Duty : "
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#040404"/>
                            <TextView
                                android:id="@+id/servicman_details_duty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#685959"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="7dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Basic Details :"
                                android:textColor="@color/teal_700"
                                android:textStyle="bold"
                                android:layout_marginRight="10dp"
                                android:textSize="19dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salary :"
                                android:textColor="#060909"
                                android:layout_marginRight="10dp"
                                android:textSize="16dp"/>

                            <TextView
                                android:id="@+id/servicman_details_salary"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textColor="@color/teal_700"
                                android:textSize="16dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age :"
                                android:textColor="#060909"
                                android:layout_marginRight="10dp"
                                android:textSize="17dp"/>
                            <TextView
                                android:id="@+id/servicman_details_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/teal_700"
                                android:textSize="17dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Permanent Address :"
                                android:textColor="#060909"
                                android:textStyle="bold"
                                android:layout_marginRight="10dp"
                                android:textSize="17dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/servicman_details_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address :"
                                android:textColor="#060909"
                                android:layout_marginRight="10dp"
                                android:textSize="16dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/add_servicman_for_duty"
                                android:layout_width="match_parent"
                                android:layout_height="37dp"
                                android:text="Add Serviceman for Duty"
                                android:layout_marginRight="7dp"
                                android:textAllCaps="false"
                                android:textSize="17dp"
                                android:backgroundTint="@color/teal_700"
                                android:textColor="@color/white"
                                android:background="@drawable/rounded_button_style"
                                android:paddingHorizontal="7dp" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#7F8787"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="30dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="140dp"
                        android:layout_height="45dp"
                        android:drawableLeft="@drawable/send_ic_icon"
                        android:text="MESSAGE"
                        android:textSize="14dp"
                        android:layout_marginRight="7dp"
                        android:backgroundTint="#32559C"
                        android:textColor="@color/white"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"/>

                    <Button
                        android:layout_width="140dp"
                        android:layout_height="45dp"
                        android:drawableLeft="@drawable/add_call"
                        android:text="PHONE CALL"
                        android:textSize="14dp"
                        android:layout_marginLeft="7dp"
                        android:backgroundTint="#D84739"
                        android:textColor="@color/white"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="4dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>