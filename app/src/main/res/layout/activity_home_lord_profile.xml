<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeLordProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/property_area_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:src="@drawable/home2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/hldr_Profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/tenant2"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/hldr_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Md. Bellal Ahmed"
                            android:textAllCaps="false"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone : "
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#040404"/>
                            <TextView
                                android:id="@+id/hldr_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="017..."
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#292424"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Occupation : "
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#040404"/>
                            <TextView
                                android:id="@+id/hldr_profession"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Businessman"
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#292424"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Building : "
                                android:textAllCaps="false"
                                android:textSize="16dp"
                                android:layout_marginVertical="6dp"
                                android:textColor="#040404"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <com.google.android.material.button.MaterialButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="39dp"
                                        android:layout_marginHorizontal="7dp"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        app:backgroundTint="@color/white"
                                        android:text="Building One"
                                        android:textColor="@color/teal_700"
                                        android:layout_gravity="center_vertical"/>

                                    <com.google.android.material.button.MaterialButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="39dp"
                                        android:layout_marginHorizontal="7dp"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        app:backgroundTint="@color/white"
                                        android:text="Building Two"
                                        android:textColor="@color/teal_700"
                                        android:layout_gravity="center_vertical"/>
                                </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="About HomeLord :"
                                android:textColor="#060909"
                                android:textStyle="bold"
                                android:layout_marginRight="10dp"
                                android:textSize="17dp"/>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                    <EditText
                                        android:id="@+id/hldr_aboutUrSelf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minHeight="100dp"
                                        android:maxLines="10"
                                        android:hint="about homelord"
                                        android:text="about homelord about homelord about homelord about homelord about homelord about homelord "
                                        android:clickable="false"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:inputType="textMultiLine"
                                        android:cursorVisible="false"
                                        android:gravity="top|left"
                                        android:textColorHint="@color/black"/>
                                </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Permanent Address :"
                                android:textColor="#060909"
                                android:textStyle="bold"
                                android:layout_marginRight="10dp"
                                android:textSize="17dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address :"
                                android:textColor="#060909"
                                android:layout_marginRight="10dp"
                                android:textSize="16dp"/>
                            <TextView
                                android:id="@+id/hldr_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="..."
                                android:textColor="@color/teal_700"
                                android:textSize="15dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thana :"
                                android:textColor="#060909"
                                android:layout_marginRight="10dp"
                                android:textSize="16dp"/>
                            <TextView
                                android:id="@+id/hldr_thana"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="...."
                                android:textColor="@color/teal_700"
                                android:textSize="16dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="District :"
                                android:textColor="#060909"
                                android:layout_marginRight="10dp"
                                android:textSize="16dp"/>
                            <TextView
                                android:id="@+id/hldr_district"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="...."
                                android:textColor="@color/teal_700"
                                android:textSize="16dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Division :"
                                android:textColor="#060909"
                                android:layout_marginRight="10dp"
                                android:textSize="16dp"/>
                            <TextView
                                android:id="@+id/hldr_division"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="...."
                                android:textColor="@color/teal_700"
                                android:textSize="16dp"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#7F8787"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>