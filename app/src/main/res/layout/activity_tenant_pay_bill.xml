<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="15dp"
    android:backgroundTint="@color/white"
    tools:context=".TenantPayBillActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingLeft="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Flat Info :"
                        android:textColor="@color/teal_700"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="15dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Homelord : "
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginRight="15dp"
                            android:textSize="16dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addPay_bill_hlname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:insetRight="10dp"
                            android:textColor="@color/teal_700"
                            android:textAllCaps="false"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selected Flat : "
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginRight="15dp"
                            android:textSize="16dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addPay_bill_flat_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:insetRight="10dp"
                            android:textColor="@color/teal_700"
                            android:textAllCaps="false"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Building : "
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginRight="15dp"
                            android:textSize="16dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addPay_bill_building_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:insetRight="10dp"
                            android:textColor="@color/teal_700"
                            android:textAllCaps="false"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rent : "
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginRight="15dp"
                            android:textSize="16dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addPay_bill_tnt_rent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:insetRight="10dp"
                            android:textColor="@color/teal_700"
                            android:textAllCaps="false"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pay Rent :"
                        android:textColor="@color/teal_700"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rent Bill: "
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginRight="20dp"
                            android:textSize="16dp"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="52dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/addPay_bill_rent_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:hint="Enter amount"/>
                            </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pay Month:"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:textSize="15dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/addPay_bill_current_month"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Current month"
                                    android:insetRight="10dp"
                                    android:paddingHorizontal="4dp"
                                    android:backgroundTint="@color/teal_700"
                                    android:textColor="@color/white"
                                    android:textAllCaps="false"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/addPay_bill_others_month"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Others"
                                    android:paddingHorizontal="4dp"
                                    android:minWidth="60dp"
                                    android:backgroundTint="@color/teal_700"
                                    android:textColor="@color/white"
                                    android:textAllCaps="false"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>


                            </LinearLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/addPay_bill_select_month_area"
                                android:layout_width="225dp"
                                android:layout_height="52dp"
                                android:layout_weight="1"
                                android:visibility="gone"
                                android:layout_marginRight="5dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
                                <AutoCompleteTextView
                                    android:id="@+id/addPay_bill_select_pay_month"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="select date"
                                    android:text=""
                                    android:textSize="15dp"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Via Payment :"
                        android:textColor="@color/teal_700"
                        android:textSize="18dp"
                        android:layout_marginTop="40dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="15dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
                        <AutoCompleteTextView
                            android:id="@+id/addPay_bill_select_pay_via"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select Via Payment"
                            android:inputType="none"
                            android:textSize="15dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trx ID: "
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginRight="20dp"
                            android:textSize="16dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/addPay_bill_TrxID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapCharacters"
                                android:hint="Enter TrxID"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginVertical="40dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addPay_bill_add_button"
                    android:layout_width="0dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:text="Pay Rent"
                    android:layout_marginRight="7dp"
                    android:textAllCaps="false"
                    android:textSize="17dp"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button_style"
                    android:paddingHorizontal="7dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/add_teked_btn"
                    android:layout_width="0dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="7dp"
                    android:text="Cancel"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textSize="17dp"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_button_style"
                    android:paddingHorizontal="7dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>