<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AddsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ads_Addflat_fab_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/teal_700"
            app:tint="@color/white"
            android:src="@drawable/plus_ic_icon"/>
        <TextView
            android:layout_toRightOf="@+id/fab_add_my_album_listing"
            android:layout_width="wrap_content"
            android:layout_marginLeft="-20dp"
            android:background="@drawable/button_outlinebox_style"
            android:paddingTop="5dp"
            android:paddingRight="17dp"
            android:paddingBottom="5dp"
            android:text="বিজ্ঞাপন"
            android:backgroundTint="@color/teal_700"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#FFFCFC"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ads_list_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"/>


</RelativeLayout>



