<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:backgroundTint="#EFF1F1"
    android:layout_marginTop="20dp">


    <LinearLayout
        android:id="@+id/property_area_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="#70E9F4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/receivedRentBill_tenant_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Md. Bellal Ahmed"
                            android:textAllCaps="false"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_height="28dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tenant"
                                android:elevation="1dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="3dp"
                                android:layout_centerVertical="true"
                                android:textColor="@color/white"/>

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:textSize="14dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ribbon2"
                                android:textColor="@color/teal_700"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="-4dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/receivedRentBill_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:32 PM"
                            android:textAllCaps="false"
                            android:textSize="13dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="6dp"
                            android:textColor="#040404"/>
                        <TextView
                            android:id="@+id/receivedRentBill_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jan 4, 2021"
                            android:textAllCaps="false"
                            android:textSize="14dp"
                            android:layout_marginVertical="6dp"
                            android:textColor="#292424"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="-4dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/receivedRentBill_building"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Building: West Building"
                            android:textAllCaps="false"
                            android:textSize="13dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginVertical="6dp"
                            android:textColor="#040404"/>
                        <TextView
                            android:id="@+id/receivedRentBill_flat_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flat: F5- A Flat"
                            android:textAllCaps="false"
                            android:textSize="14dp"
                            android:layout_marginVertical="6dp"
                            android:textColor="#292424"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15dp"
                        android:orientation="horizontal">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/receivedRentBill_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAllCaps="false"
                            android:textSize="15dp"
                            android:inputType="textMultiLine"
                            android:lineHeight="19dp"
                            android:layout_marginVertical="6dp"
                            android:textColor="#4C4B4B"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount: "
                            android:textAllCaps="false"
                            android:textSize="16dp"
                            android:layout_marginVertical="6dp"
                            android:textColor="#040404"/>
                        <TextView
                            android:id="@+id/receivedRentBill_rentAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAllCaps="false"
                            android:textSize="16dp"
                            android:layout_marginVertical="6dp"
                            android:textColor="#292424"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Month : "
                            android:textAllCaps="false"
                            android:textSize="16dp"
                            android:layout_marginVertical="6dp"
                            android:textColor="#040404"/>
                        <TextView
                            android:id="@+id/receivedRentBill_rent_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAllCaps="false"
                            android:textSize="16dp"
                            android:layout_marginVertical="6dp"
                            android:textColor="#292424"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Via : "
                            android:textAllCaps="false"
                            android:textSize="16dp"
                            android:layout_marginVertical="6dp"
                            android:textColor="#040404"/>
                        <TextView
                            android:id="@+id/receivedRentBill_via_service"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAllCaps="false"
                            android:textSize="16dp"
                            android:layout_marginVertical="6dp"
                            android:textColor="#292424"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trx ID : "
                            android:textAllCaps="false"
                            android:textSize="16dp"
                            android:layout_marginVertical="6dp"
                            android:textColor="#040404"/>
                        <TextView
                            android:id="@+id/receivedRentBill_via_trxID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAllCaps="false"
                            android:textSize="16dp"
                            android:layout_marginVertical="6dp"
                            android:textColor="#292424"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/homelord_receiveBill_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:text="Receive"
                    android:layout_marginRight="7dp"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textSize="14dp"
                    android:textColor="@color/teal_700"
                    android:background="@drawable/button_outlinebox_style"
                    android:paddingHorizontal="12dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tenant_details_show_btn"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:text="Delete"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textSize="14dp"
                    android:textColor="#DF3131"
                    android:background="@drawable/button_outlinebox_style"
                    android:paddingHorizontal="9dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>