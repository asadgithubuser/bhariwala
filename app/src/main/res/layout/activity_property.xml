    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_property_fab_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/teal_700"
            app:tint="@color/white"
            android:src="@drawable/plus_ic_icon"/>

        <TextView
            android:layout_toRightOf="@+id/fab_add_my_album_listing"
            android:layout_width="wrap_content"
            android:layout_marginLeft="-20dp"
            android:background="@drawable/button_outlinebox_style"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="Property"
            android:backgroundTint="@color/teal_700"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#FFFCFC"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

    </LinearLayout>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:backgroundTint="@color/white"
       android:layout_marginHorizontal="12dp">
       <LinearLayout
           android:id="@+id/property_area_id"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:layout_marginTop="15dp"
           android:layout_marginBottom="10dp"
           android:orientation="horizontal">
           <View
               android:layout_width="6dp"
               android:layout_height="fill_parent"
               android:background="#E8CE29"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:orientation="vertical">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Mayer Dua Ghar"
                   android:textAllCaps="false"
                   android:textSize="20dp"
                   android:textColor="@color/black"
                   android:textStyle="bold"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="house-2, road-15, section-6, mirpur,Dhaka"
                   android:textAllCaps="false"
                   android:textSize="18dp"
                   android:layout_marginVertical="6dp"
                   android:textColor="#685959"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginVertical="10dp"
                   android:orientation="horizontal">

                   <androidx.appcompat.widget.AppCompatButton
                       android:id="@+id/property_flat_btn"
                       android:layout_width="80dp"
                       android:layout_height="33dp"
                       android:drawableLeft="@drawable/flat"
                       android:text="Flats"
                       android:textColor="@color/black"
                       android:layout_marginRight="20dp"
                       android:textAllCaps="false"
                       android:textSize="17dp"
                       android:paddingHorizontal="7dp"
                       android:background="@drawable/button_outlinebox_style" />

                   <androidx.appcompat.widget.AppCompatButton
                       android:id="@+id/property_rentManagement_btn"
                       android:layout_width="187dp"
                       android:layout_height="33dp"
                       android:drawableLeft="@drawable/money"
                       android:text="Rent Management"
                       android:textColor="@color/black"
                       android:textAllCaps="false"
                       android:textSize="17dp"
                       android:paddingHorizontal="7dp"
                       android:background="@drawable/button_outlinebox_style" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="6dp"
                   android:orientation="horizontal">

                   <androidx.appcompat.widget.AppCompatButton
                       android:id="@+id/send_message_from_property_item"
                       android:layout_width="155dp"
                       android:layout_height="33dp"
                       android:drawableLeft="@drawable/message"
                       android:text="Send Message"
                       android:layout_marginRight="20dp"
                       android:textAllCaps="false"
                       android:textSize="17dp"
                       android:textColor="@color/black"
                       android:paddingHorizontal="7dp"
                       android:background="@drawable/button_outlinebox_style" />

                   <androidx.appcompat.widget.AppCompatButton
                       android:id="@+id/property_tenant_btn"
                       android:layout_width="110dp"
                       android:layout_height="33dp"
                       android:drawableLeft="@drawable/tenant"
                       android:text="Tenants"
                       android:textAllCaps="false"
                       android:textColor="@color/black"
                       android:textSize="17dp"
                       android:paddingHorizontal="7dp"
                       android:background="@drawable/button_outlinebox_style" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginVertical="20dp"
                   android:gravity="center_horizontal"
                   android:orientation="horizontal">

                   <androidx.appcompat.widget.AppCompatButton
                       android:layout_width="180dp"
                       android:layout_height="35dp"
                       android:text="Delete Property"
                       android:textAllCaps="false"
                       android:textSize="18dp"
                       android:textColor="#EA441A"
                       android:background="@drawable/button_outlinebox_style"
                       android:paddingHorizontal="7dp" />

               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="#7F8787"/>
           </LinearLayout>
       </LinearLayout>
   </androidx.cardview.widget.CardView>


</RelativeLayout>
