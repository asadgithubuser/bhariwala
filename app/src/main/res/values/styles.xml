<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tbutton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/teal_700</item>
        <item name="android:state_pressed" >true</item>
    </style>

    <style name="heading_text_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#407E7E</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="cardHeading_text_style">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#407E7E</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="click_custom_style">
        <item name="selectableItemBackground">@color/purple_200</item>
    </style>
    <style name="cardView_top_custom_radius">
        <item name="android:topLeftRadius">15dp</item>
        <item name="android:topRightRadius">15dp</item>
        <item name="background">@color/purple_200</item>
    </style>
    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/cardView_top_custom_radius2</item>
    </style>
    <style name="cardView_top_custom_radius2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="background">@color/teal_700</item>
    </style>
    <style name="round_solid_color_button_style">
        <item name="background">@color/teal_700</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">4dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>
    <style name="DropdownItemPadding" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:paddingVertical">6dp</item>
    </style>
    <style name="Custom_Dialog" parent="ThemeOverlay.AppCompat.Light" >
        <item name="windowMinWidthMajor">100%</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>
</resources>